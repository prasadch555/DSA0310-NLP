
from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.metrics.pairwise import cosine_similarity
text = ["John loves football.", "He practices every day.", "Football is his passion."]
tfidf = TfidfVectorizer().fit_transform(text)
scores = [cosine_similarity(tfidf[i], tfidf[i+1])[0][0] for i in range(len(text)-1)]
print("Coherence Scores:", scores)
print("Average Coherence:", sum(scores)/len(scores))

